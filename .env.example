# NavTrack Production Environment Variables
# Copie este archivo a .env y configure los valores según su entorno

# Dominios
DOMAIN_FRONTEND=gps-qa.inversionespereztaveras.com
DOMAIN_API=gps-api-qa.inversionespereztaveras.com
DOMAIN_ODOO_API=gps-odoo-qa.inversionespereztaveras.com
DOMAIN_LISTENER=gps-listener-qa.inversionespereztaveras.com

# Email para certificados SSL (Let's Encrypt)
SSL_EMAIL=admin@inversionespereztaveras.com

# Base de datos MongoDB
MONGO_DATABASE=navtrack
MONGO_CONNECTION_STRING=mongodb://database:27017

# Configuración de puertos del GPS Listener
LISTENER_PORT_START=7002
LISTENER_PORT_END=7100

# Directorio de instalación
INSTALL_DIR=/opt/navtrack

# Environment
ASPNETCORE_ENVIRONMENT=Production

# Configuración adicional (opcional)
# MONGO_USERNAME=navtrack_user
# MONGO_PASSWORD=secure_password_here
